extends layout

block content 
  div.w3-card-4
    header.w3-container.w3-teal
      h1 Periodo #{periodo.nome}

    div.w3-container
      ul.w3-ul.w3-card-4(style="width:50%")
        li
          b Id:
          span= periodo.id
        li
          b Nome:
          span= periodo.nome

    div.class.w3-container.w3-margin-8
      ul.w3-ul
        -for(let i=0; i < periodo.compositores.length; i++)
          li
            a(href="/compositores/" + periodo.compositores[i])= compositores[i].nome


    footer.w3-container.w3-teal
      span Gerado por galuno::RPCW2022 em #{d} - [
      a(href="/") Voltar
      span ]